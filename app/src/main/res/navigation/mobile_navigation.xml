<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_pet">

    <fragment
        android:id="@+id/navigation_pet"
        android:name="com.example.fitpet.ui.pet.PetFragment"
        android:label="@string/title_pet"
        tools:layout="@layout/fragment_pet" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.fitpet.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.fitpet.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_achievements"
        android:name="com.example.fitpet.ui.achievements.AchievementsFragment"
        android:label="@string/title_achievements"
        tools:layout="@layout/fragment_achievements" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.fitpet.ui.settings.SettingsFragment"
